{
  "name": "mobile-app-server",
  "version": "1.0.0",
  "description": "Mobile app server backend using Express.js, MongoDB, and JWT authentication",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "worker": "node src/jobs/worker.js",
    "test": "node scripts/smart-test.js",
    "test:unit": "SKIP_DB_SETUP=true node --max-old-space-size=4096 node_modules/.bin/jest tests/unit",
    "test:integration": "node --max-old-space-size=4096 node_modules/.bin/jest tests/integration",
    "test:all": "node --max-old-space-size=4096 node_modules/.bin/jest",
    "test:watch": "node --max-old-space-size=4096 node_modules/.bin/jest --watchAll",
    "test:coverage": "node --max-old-space-size=4096 node_modules/.bin/jest --coverage",
    "test:performance": "node --max-old-space-size=4096 node_modules/.bin/jest tests/performance",
    "create-admin": "node scripts/createAdmin.js",
    "verify-services": "node ../scripts/verify-services.js"
  },
  "keywords": [
    "express",
    "mongodb",
    "jwt",
    "passport",
    "api",
    "mobile"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "bullmq": "^5.3.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.1",
    "express-validator": "^7.0.1",
    "firebase-admin": "^12.0.0",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "multer": "^1.4.5-lts.1",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "@sentry/node": "^8.0.0",
    "@sentry/profiling-node": "^8.0.0",
    "prom-client": "^15.1.3",
    "rate-limit-redis": "^4.3.1",
    "sharp": "^0.33.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.4"
  }
}
